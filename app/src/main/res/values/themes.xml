<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Chart" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="chartStyle">@style/GlobalChartStyle</item>
    </style>
    <style name="DefaultChartStyle">
        <item name="chartColor">@color/black</item>
        <item name="dotsColor">@color/black</item>
        <item name="valuesSize">30</item>
        <item name="charLineWidth">1</item>
    </style>

    <style name="GlobalChartStyle" parent="DefaultChartStyle">
        <item name="valuesSize">30</item>
    </style>
</resources>